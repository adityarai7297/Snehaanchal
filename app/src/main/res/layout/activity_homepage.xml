<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/aqua_blue_gradient_background">

    <Button
        android:id="@+id/add_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/add_p"
        android:onClick="addPatient"
        android:text="Add Patient"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />

    <Button
        android:id="@+id/search_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_button"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/search_p"
        android:onClick="searchPatient"
        android:text="Search Patient"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />

    <Button
        android:id="@+id/remove_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_button"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/remove_p"
        android:onClick="removePatient"
        android:text="Remove Patient"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />
</RelativeLayout>